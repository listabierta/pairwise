    %br
    %br
    -if !photo.url_mifirma.nil? && photo.url_mifirma.strip != ''
      =link_to 'Ver perfil y/o avalar', photo.url_mifirma, {:class => 'btn btn-info', :target => '_blank'}
      %p{:class => 'noprofile'}
    -else
      =link_to 'Ver perfil y/o avalar', '/', {:class => 'btn btn-info disabled', :target => '_blank'}
