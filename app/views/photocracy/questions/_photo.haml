%div{:class => "candidate_box #{direction}"}
  .candidate_info
    .candidate_photo
      =image_tag(photo.image.url(:medium))
    %dl.dl-horizontal
      %dt
        Nombre
      %dd{:class => 'nombre'}
        = photo.nombre.nil? ? '-' : photo.nombre.strip == '' ? '-' : photo.nombre.strip
      %dt
        Apellidos
      %dd{:class => 'apellidos'}
        = photo.apellidos.nil? ? '-' : photo.apellidos.strip == '' ? '-' : photo.apellidos.strip
      %dt
        Estudios
      %dd{:class => 'estudios'}
        = photo.estudios.nil? ? '-' : photo.estudios.strip == '' ? '-' : photo.estudios.strip
      %dt
        Profesion
      %dd{:class => 'profesion'}
        = photo.profesion.nil? ? '-' : photo.profesion.strip == '' ? '-' : photo.profesion.strip
      %dt
        Idiomas que domina
      %dd{:class => 'idiomas_dominio'}
