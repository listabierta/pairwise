            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top"><input type="hidden" name="cmd" value="_s-xclick"><input type="hidden" name="hosted_button_id" value="YC7RZGPGADPC4"><input type="image" src="https://www.paypalobjects.com/es_ES/ES/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal. La forma rápida y segura de pagar en Internet."><img alt="" border="0" src="https://www.paypalobjects.com/es_ES/i/scr/pixel.gif" width="1" height="1"></form>
        .row
          .col-xs-12
            -if !current_user.nil? && (current_user.owns?(@earl) || current_user.admin?)
              =link_to t('nav.manage_question'), url_for(:controller => :questions, :action => :admin, :id => @earl.name), :class => 'btn btn-primary'
            =hidden_field_tag 'appearance_lookup', @question.attributes['appearance_id']
            =hidden_field_tag 'prompt_id', @prompt.id
:javascript
  $(document).ready(function(){

    // load the visitor's voting history
    jQuery.get('/questions/#{@question.id}/visitor_voting_history.json', function(data){

      updateVisitorVotes(data['votes'].length);

    });

    loadNextPrompt(result);
    updateUrlsAndHiddenFields(result);
  });
